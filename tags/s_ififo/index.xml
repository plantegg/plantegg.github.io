      "><span class="line"><span class="cl">printf(&#34;File type:                &#34;);
</span></span><span class="line"><span class="cl">   switch (sb.st_mode &amp; S_IFMT) {
</span></span><span class="line"><span class="cl">    case S_IFBLK:  printf(&#34;block device\n&#34;);            break;
</span></span><span class="line"><span class="cl">    case S_IFCHR:  printf(&#34;character device\n&#34;);        break;
</span></span><span class="line"><span class="cl">    case S_IFDIR:  printf(&#34;directory\n&#34;);               break;
</span></span><span class="line"><span class="cl">    case S_IFIFO:  printf(&#34;FIFO/pipe\n&#34;);               break;
</span></span><span class="line"><span class="cl">    case S_IFLNK:  printf(&#34;symlink\n&#34;);                 break;
</span></span><span class="line"><span class="cl">    case S_IFREG:  printf(&#34;regular file\n&#34;);            break;
</span></span><span class="line"><span class="cl">    case S_IFSOCK: printf(&#34;socket\n&#34;);                  break;
</span></span><span class="line"><span class="cl">    default:       printf(&#34;unknown?\n&#34;);                break;
</span></span><span class="line"><span class="cl">    }</span></span></code></pre>
